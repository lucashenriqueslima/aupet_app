{
    "compilerOptions": {
        "declaration": false,
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ],
    "lib": [
        "es2018"
    ]
}